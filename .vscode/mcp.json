{
  "servers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${input:rootDirectory}",
        "${input:allowedDirectories}"
      ],
      "type": "stdio"
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "type": "stdio"
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp"],
      "env": {},
      "type": "stdio"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "type": "stdio"
    }
  },
  "inputs": [
    {
      "id": "rootDirectory",
      "type": "promptString",
      "description": "Root Directory"
    },
    {
      "id": "allowedDirectories",
      "type": "promptString",
      "description": "Allowed Directories"
    }
  ]
}

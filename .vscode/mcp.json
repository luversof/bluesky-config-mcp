{
  "inputs": [
    {
      "id": "rootDirectory",
      "type": "promptString",
      "description": "Root Directory"
    },
    {
      "id": "allowedDirectories",
      "type": "promptString",
      "description": "Allowed Directories"
    }
  ],
  "servers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${input:rootDirectory}",
        "${input:allowedDirectories}"
      ]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp",
        "redis://redis.bluesky.local:6379"
      ],
      "env": {}
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp"],
      "env": {}
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    }
  }
}
